<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="txtPoint">
        <item name="android:background">@drawable/drawable</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="btnTap1">
    <item name="android:background">@drawable/mybutton</item>
    <item name="android:textColor">#494646</item>
    <item name="android:layout_marginBottom">1dp</item>
    <item name="android:shadowColor">#ff8c00</item>
    <item name="android:shadowDx">10</item>
    <item name="android:shadowRadius">1.8</item>
    <item name="android:shadowDy">5</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="txtLogin">
        <item name="android:background">@drawable/under_line_txt</item>
    </style>

</resources>
