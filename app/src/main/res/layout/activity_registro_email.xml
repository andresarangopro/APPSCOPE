<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:fillViewport="false">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="10">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¡Regístrate!"
            android:textAlignment="center"
            android:textColor="@color/textoSecundario"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="60"
        android:weightSum="200"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:text="E-mail:"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/mail"
            style="@style/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@drawable/edittextborder"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="15"
            android:text="Contraseña:"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/contraseña"
            style="@style/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@drawable/edittextborder"
            android:hint="Contraseña: "
            android:inputType="textPassword" />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="15"
            android:text="Confirmar contraseña:"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/contraseñaC"
            style="@style/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@drawable/edittextborder"
            android:hint="Confirmar contraseña:"
            android:inputType="textPassword" />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="15"
            android:text="Pregunta de seguridad:"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/preguntaP"
            style="@style/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@drawable/edittextborder"
            android:hint="Pregunta....:"
            android:inputType="textPassword" />

        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="15"
            android:text="Respuesta:"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/RespuestaP"
            style="@style/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@drawable/edittextborder"
            android:hint="Confirmar contraseña:"
            android:inputType="textPassword" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/iBtnUser"
            style="@style/btnTap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="Usuario" />

        <Button
            android:id="@+id/iBtnCompany"
            style="@style/btnTap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="Empresa" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvAlreadyRegister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="¿Ya estás registrado? Ingresa acá!"
        android:textAlignment="center"
        android:textColor="@color/colorAccent" />
</LinearLayout>

