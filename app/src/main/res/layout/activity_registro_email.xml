<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.felipearango.appscope.RegistroEmail"
    android:orientation="vertical"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:layout_marginBottom="15dp">
        <TextView
            android:textAlignment="center"
            android:textColor="@color/textoSecundario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="¡Regístrate!"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="180"
        android:layout_weight="70"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:text="E-mail:"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/mail"
            style="@style/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@drawable/edittextborder"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:text="Contraseña:"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/contraseña"
            style="@style/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@drawable/edittextborder"
            android:hint="Contraseña: "
            android:inputType="textPassword" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="15"
            android:text="Confirmar contraseña:"
            android:textColor="@color/colorAccent" />

        <EditText
            android:id="@+id/contraseñaC"
            style="@style/txtPoint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:background="@drawable/edittextborder"
            android:hint="Confirmar contraseña:"
            android:inputType="textPassword" />
        <TextView
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:textSize="20dp"
            android:text="Registrar como: "/>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">



            <Button
                android:text="Usuario"
                android:layout_marginRight="10dp"
                style="@style/btnTap1"
                android:id="@+id/iBtnUser"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:text="Empresa"
                android:layout_marginLeft="10dp"
                style="@style/btnTap1"
                android:id="@+id/iBtnCompany"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/btnAlreadyRegister"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:text="¿Ya estás registrado? Ingresa acá!"/>
    </LinearLayout>
</LinearLayout>
