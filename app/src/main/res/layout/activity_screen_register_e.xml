<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context="com.example.felipearango.appscope.ScreenRegisterE">

    <LinearLayout
        android:layout_weight="50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:text="¡Completa tú registro!"
            android:textAlignment="center"
            android:textColor="@color/textoSecundario"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:weightSum="7"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtNameE"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Nombre de la empresa" />


            <EditText
                android:id="@+id/txtMailE"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Mail" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/txtPassE"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Password" />

                <EditText
                    android:id="@+id/txtPassEC"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Confirm Password" />
            </LinearLayout>

            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/btnRegisterE"
                style="@style/btnTap1"
                android:layout_width="200dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Registrar" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
