<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="7"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:orientation="vertical"
    tools:context="com.example.felipearango.appscope.CompletarPerfil">

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:layout_weight="7"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <EditText
            android:id="@+id/txtNameCP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Nombre"
            android:inputType="text|textCapWords|textAutoCorrect|textAutoComplete|textPersonName"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtOcupacionCP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Ocupación"
            android:maxLength="25"
            android:inputType="text|textAutoCorrect|textAutoComplete"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtEdadCP"
            android:datePickerMode="calendar"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Edad"
            android:inputType="number"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtFraseCP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Frase "
            android:maxLength="50"
            android:inputType="text|textAutoCorrect|textAutoComplete|textLongMessage"
            android:singleLine="true" />

        <EditText
            android:id="@+id/txtUniversidadCP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Universidad"
            android:inputType="text|textAutoCorrect|textAutoComplete" />

        <EditText
            android:id="@+id/txtCelularCP"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Celular"
            android:inputType="number"
            android:maxLength="10" />

        <EditText
            android:id="@+id/etHojaVida"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Ubicación "
            android:inputType="text|textAutoCorrect|textAutoComplete"
            android:singleLine="true" />
        <TextView
            android:id="@+id/tVChangeImgP"
            android:text="Documentos"
            android:textColor="@color/orangeBasic"
            android:layout_width="match_parent"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="1dp">

            <EditText
                android:id="@+id/et_doc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:hint="Etiquetas" />

            <Button
                android:id="@+id/btnAddFile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@null"
                android:drawableRight="@mipmap/ic_archive" />
            <Button
                android:id="@+id/btnInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.15"
                android:background="@null"
                android:drawableRight="@mipmap/ic_info" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_add"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="1">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>